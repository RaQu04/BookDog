@model BookDog.Models.Owner

@{
    ViewData["Title"] = "Edytuj";
}

<h1>Edytuj</h1>

<h4>Właściciel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumer" class="control-label"></label>
                <input asp-for="PhoneNumer" class="form-control" />
                <span asp-validation-for="PhoneNumer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mail" class="control-label"></label>
                <input asp-for="Mail" class="form-control" />
                <span asp-validation-for="Mail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br /><input type="submit" value="Zapisz" class="btn btn-primary" /> | <a asp-action="Index" class="btn btn-secondary btn-sm">Powrót</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
